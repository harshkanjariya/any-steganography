{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "src",
		"allowJs": true
	},
	"compileOnSave": true,
	"include": [
	    "./src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"lib": [
		"es2015"
	]
}